<?xml version="1.0" encoding="utf-8" ?>  
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:local="clr-namespace:OneTouch.View"  
             x:Class="OneTouch.View.MyMasterPage" Title="I am master" MasterBehavior="Popover" BackgroundColor="Cyan">  
      
    <MasterDetailPage.Master>  
        <ContentPage Padding="10" BackgroundColor="Gray" Title="Master">  
            <ContentPage.Content>  
                <StackLayout Margin="5,30,5,5">  
                    <Label Text="Master page Menu"></Label>  
                    <Button Text="Drinks" BackgroundColor="Yellow" Command="{Binding ShowDrinksCommand}"></Button>  
                    <Button Text="Friends" BackgroundColor="Yellow" Command="{Binding ShowDrinksCommand}"></Button> 
                </StackLayout>  
            </ContentPage.Content>  
        </ContentPage>  
    </MasterDetailPage.Master>  
    <MasterDetailPage.Detail>  
        <ContentPage Padding="10">  
            <ContentPage.Content>  
                <StackLayout Margin="5,30,5,5">  
                    <Label Text="Detail Page"></Label>  
                </StackLayout>  
            </ContentPage.Content>  
        </ContentPage>  
    </MasterDetailPage.Detail>  
</MasterDetailPage> 